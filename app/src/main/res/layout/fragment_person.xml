<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/icon_me_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:lineSpacingExtra="4dp"
            android:text="用户名：外汇小白"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/icon_user_yonghu" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30dp"
        android:background="@drawable/setting_item_bg"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <com.rey.material.widget.TextView
            android:id="@+id/tv_me_collection"
            style="@style/style_me_list_tv"
            android:drawableLeft="@mipmap/icon_collection"
            android:text="我的收藏" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />

        <com.rey.material.widget.TextView
            android:id="@+id/tv_me_reading"
            style="@style/style_me_list_tv"
            android:drawableLeft="@mipmap/icon_reading"
            android:onClick="onClick"
            android:text="最近阅读" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />

        <com.rey.material.widget.TextView
            android:id="@+id/tv_me_opinion"
            style="@style/style_me_list_tv"
            android:drawableLeft="@mipmap/icon_opinion"
            android:onClick="onClick"
            android:text="意见反馈" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />

        <com.rey.material.widget.TextView
            android:id="@+id/tv_me_setting"
            style="@style/style_me_list_tv"
            android:drawableLeft="@mipmap/icon_setting"
            android:onClick="onClick"
            android:text="设置" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />

    </LinearLayout>
</LinearLayout>